<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1a1a1a"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <Button
            android:id="@+id/back_to_speedometer_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="←"
            android:textSize="20sp"
            android:backgroundTint="#FF4500"
            android:textColor="#000000"
            android:padding="0dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DRAG RACING"
            android:textSize="28sp"
            android:textColor="#FF4500"
            android:textStyle="bold"
            android:fontFamily="@font/digital7"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/gps_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ℹ️"
            android:textSize="20sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#000000">

            <!-- Current Speed Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:fontFamily="@font/digital7"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CURRENT SPEED"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/current_speed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="150sp"
                    android:textColor="#FF4500"
                    android:fontFamily="@font/digital7"
                    android:letterSpacing="0.05"
                    android:includeFontPadding="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM/H"
                    android:textSize="50sp"
                    android:textColor="#FF4500"
                    android:letterSpacing="0.2"
                    android:fontFamily="@font/digital7"
                    android:layout_marginTop="-8dp" />

            </LinearLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready - Come to complete stop to begin"
                android:textSize="17sp"
                android:textColor="#AAAAAA"
                android:gravity="center"
                android:padding="12dp"
                android:background="#0d0d0d"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Results Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0d0d0d"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERFORMANCE"
                    android:textSize="15sp"
                    android:textColor="#888888"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/digital7"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/time_0_to_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0-60 km/h: --"
                    android:textSize="20sp"
                    android:textColor="#00FF00"
                    android:fontFamily="@font/digital7"
                    android:padding="10dp"
                    android:background="#1a1a1a"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/time_0_to_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0-100 km/h: --"
                    android:textSize="20sp"
                    android:textColor="#00FF00"
                    android:fontFamily="@font/digital7"
                    android:padding="10dp"
                    android:background="#1a1a1a"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/time_custom_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0-80 km/h: --"
                    android:textSize="20sp"
                    android:textColor="#00BFFF"
                    android:fontFamily="@font/digital7"
                    android:padding="10dp"
                    android:background="#1a1a1a"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/time_custom_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="400m: --"
                    android:textSize="20sp"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/digital7"
                    android:padding="10dp"
                    android:background="#1a1a1a" />

            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="RESET"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/digital7"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/settings_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="SETTINGS"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/digital7"
                    android:layout_marginStart="8dp" />

            </LinearLayout>


        </LinearLayout>

    <!-- Banner Ad Container -->
    <FrameLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
